<!DOCTYPE html>
<html lang="en">

  <%- include('layouts/header'); -%>
  
  <body> 
  <%- include('layouts/navbar'); -%>

  <!-- Page Header -->
  <header class="masthead" style="background-image: url('img/home-bg.jpg')">
    <div class="overlay"></div>
    <div class="container">
      <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
          <div class="site-heading">
            <h1>Worldcup</h1>
            <span class="subheading">Select your worldcup</span>
          </div>
        </div>
      </div>
    </div>
  </header>

  <!-- Main Content -->
  <div class="container">
    <div class="row">
      <div class="col-lg-8 col-md-10 mx-auto">
        <% for (var i = 0; i < worldcups.length; i++) { %>
        <div class="post-preview">
          <a href="/worldcup/post/<%= worldcups[i]._id %>"> 
            <h2 class="post-title">
              <%= worldcups[i].title %>
            </h2>
            <!-- <h3 class="post-subtitle">
              <%= worldcups[i].body %>
            </h3> -->
          </a>
          <p class="post-meta">Posted by
            <a href="#"><%= worldcups[i].userid.username %></a>
            on <%= worldcups[i].datePosted.toDateString() %></p>
        </div>
        <hr>       
        <% } %>
        <!-- Pager -->
        <div class="clearfix">
          <a class="btn btn-primary float-right" href="#">Older Posts &rarr;</a>
        </div>
      </div>
    </div>
  </div>

  <hr>

  <%- include('layouts/footer'); -%>
  <%- include('layouts/scripts'); -%>

 

</body>

</html>
